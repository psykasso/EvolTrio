<?xml version="1.0" ?>
<project basedir="." default="build" name="EvolTrio">
	<property environment="env" />
	<property name="debuglevel" value="source,lines,vars" />
	<property name="target" value="1.6" />
	<property name="source" value="1.6" />
	<path id="EvolTrio.classpath">
		<pathelement location="lib/commons-cli-1.2.jar" />
		<pathelement location="lib/jfugue-4.0.3.jar" />
		<pathelement location="lib/jgap.jar" />
		<pathelement location="lib/jcommon-1.0.16.jar" />
		<pathelement location="lib/jfreechart-1.0.13.jar" />
		<pathelement location="lib/pivot-charts-2.0.jar" />
		<pathelement location="lib/pivot-core-2.0.jar" />
		<pathelement location="lib/pivot-jfree-2.0.jar" />
		<pathelement location="lib/pivot-wtk-2.0.jar" />
		<pathelement location="lib/pivot-wtk-terra-2.0.jar" />

	</path>
	<target name="init">
		<mkdir dir="bin" />
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>
	<target name="clean">
		<delete dir="bin" />
	</target>
	<target depends="clean" name="cleanall" />
	<target depends="build-subprojects,build-project" name="build" />
	<target name="build-subprojects" />
	<target depends="init" name="build-project">
		<echo message="${ant.project.name}: ${ant.file}" />
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}">
			<src path="src" />
			<classpath refid="EvolTrio.classpath" />
		</javac>
	</target>
	<target description="Build all projects which reference this project. Useful to propagate changes." name="build-refprojects" />
	<target name="Evolution">
		<java classname="gr.evoltrio.core.ui.EvolTrioUI" failonerror="true" fork="yes">
			<classpath refid="EvolTrio.classpath" />
		</java>
	</target>

	<target name="compress" depends="init" description="Compression target">
		<jar jarfile="EvolTrio.jar" basedir="bin" includes="**/*.class">
			<manifest>
				<attribute name="Main-Class" value="org.apache.pivot.wtk.ScriptApplication --src=/gr/evoltrio/ui/EvolTrioUI.bxml" />
				<attribute name="Class-Path" value="lib/jgap.jar lib/jfugue-4.0.3.jar lib/commons-cli-1.2.jar lib/jcommon-1.0.16.jar lib/jfreechart-1.0.13.jar lib/pivot-charts-2.0.jar lib/pivot-core-2.0.jar lib/pivot-jfree-2.0.jar lib/pivot-wtk-2.0.jar lib/pivot-wtk-terra-2.0.jar " />

			</manifest>
		</jar>
	</target>
</project>